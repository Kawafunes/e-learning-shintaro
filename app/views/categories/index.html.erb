<div class="container">    
    <h1>Categories</h1>
    <br>
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= category.title %></h5>
                        <p class="card-text"><%= category.description %></p>
                        <a href="#" class="btn btn-primary">Try to answer</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="pagination">
        <%= will_paginate %>
    </div>
</div>    
