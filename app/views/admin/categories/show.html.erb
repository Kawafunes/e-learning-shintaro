<div class="background-category">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
            <p> Title </p>
            <h1><%= @category.title %></h1>
            <br>
            <p> Description </p>
            <h1> <%= @category.description %></h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Word</th>
                            <th scope="col">Answer</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @words.each do |word| %>
                            <tr>
                            <td scope="row"><%= word.content %></td>
                            <td><%= word.correct_answer %></td>
                            <td><%= link_to "Delete",admin_category_word_path(@category, word) , method: :delete %>
                                <%= link_to "Edit", edit_admin_category_word_path(@category, word) %> </td>
                        <% end %>
                    </tbody>
                </table>
                <div class="btn">
                    <%= link_to "Add Word", new_admin_category_word_path(@category), class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>