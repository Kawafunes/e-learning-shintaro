            <% @categories.each do |category| %>
                <tr>
                <td scope="row"><%= category.title %></td>
                <td><%= category.description %></td>
                <td><%= link_to "Delete","#"  %><%= link_to " Edit","#"  %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
