<div class="col-md-6 offset-md-3">
    <div class="container1">
        <h1>Administer Categories</h1>
        <p>You can create new category here!</p>
        <br>
    </div>
    <div class="btn-3">
        <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary" %>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                <td scope="row"><%= link_to "#" , category.title %></td>
                <td><%= category.description %></td>
                <td><%= link_to "Delete",admin_category_path(category) , method: :delete , data: { confirm: "Are you sure"}  %>
                    <%= link_to "Edit", edit_admin_category_path(category) %>
                    <%= link_to "Add", admin_category_path(category) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

