  <div class="container">
      <div class="row">
          <div class="col-md-12 ">
              <h1>Administer Categories</h1>
              <p>You can create new category here!</p>
              <br>
              <div class="btn">
                  <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary" %>
              </div>
              <table class="table table-hover">
                  <thead>
                      <tr>
                          <th scope="col">Title</th>
                          <th scope="col">Description</th>
                          <th scope="col">Action</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% @categories.each do |category| %>
                          <tr>
                          <td scope="row"><%= category.title %></td>
                          <td><%= category.description %></td>
                          <td><%= link_to "Add", admin_category_path(category) ,class: "btn btn-primary" %>
                              <%= link_to "Edit", edit_admin_category_path(category) ,class: "btn btn-secondary" %>
                              <%= link_to "Delete",admin_category_path(category) , method: :delete , data: { confirm: "Are you sure"} ,class: "btn btn-danger" %></td>
                          </tr>
                      <% end %>
                  </tbody>
              </table>
              
              <nav aria-label="Page-navigation">
                  <ul class="pagination">
                      <li class="page-item">
                      <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                      </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/admin/categories?page1">1</a></li>
                    <li class="page-item"><a class="page-link" href="/admin/categories?page2">2</a></li>
                    <li class="page-item"><a class="page-link" href="/admin/categories?page3">3</a></li>
                    <li class="page-item">
                      <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                      </a>
                    </li>
                  </ul>
              </nav>
          </div>
      </div>
  </div>