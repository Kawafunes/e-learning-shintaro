 <div class="container">
    <h1>Administer Users</h1>
    <br>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Admin</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <% if user.is_admin? %>
                            <%= button_to "Remove", admin_user_path(user), method: :delete, class: "btn btn-secondary" %>
                        <% else %>
                            <%= button_to "Add", admin_user_path(user), method: :patch, class: "btn btn-primary" %>
                        <% end %>
                    </td>                        
                </tr>
            <% end %>
        </tbody> 
    </table>
    <%= will_paginate %>
</div>