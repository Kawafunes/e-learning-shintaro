<div class="container mt-5">
    <div class="col-md-6 offset-md-3">
        <h1><%= @lesson.category.title %> </h1>
        <h1> Result:  <%= @lesson.result %> of <%= @lesson.category.words.count %></h1>
        <br>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col"><i class="fas fa-check" style="color:blue;"></i>  <i class="fas fa-times" style="color:red;"></i></th>
                <th scope="col">Word</th>
                <th scope="col">Your answer</th>
                <th scope="col">Correct answer</th>
            </tr>
        </thead>
        <tbody>
            <% @lesson.answers.each do |answer| %>
                <tr>
                    <td><% if answer.word.correct_answer %>
                            <i class="fas fa-check" style="color:blue;"></i>
                        <% else %>
                            <i class="fas fa-cross" style="color:red;"></i>
                        <% end %>
                    </td>
                    <td><%= answer.word.content %></td>
                    <td><%= answer.choice.content %></td>
                    <td><%= answer.word.correct_answer %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>